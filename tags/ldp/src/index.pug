				.col-6.col-md-3.block-hot-product-item.wow.fadeInUp(data-wow-delay="0.15s")
					a(href="#")
						img(src="./assets/hot_product_1.jpg", alt="")
				.col-6.col-md-3.block-hot-product-item.wow.fadeInUp(data-wow-delay="0.25s")
					a(href="#")
						img(src="./assets/hot_product_2.jpg", alt="")
				.col-6.col-md-3.block-hot-product-item.wow.fadeInUp(data-wow-delay=".35s")
					a(href="#")
						img(src="./assets/hot_product_3.jpg", alt="")
				.col-6.col-md-3.block-hot-product-item.wow.fadeInUp(data-wow-delay="0.45s")
					a(href="#")
						img(src="./assets/hot_product_4.jpg", alt="")
