			//- 	a(href="#")
			//- 		img(src="./assets/banner_2.jpg", alt="")
	section.block-form-countdown
		.container
			.block-title.text-center
				h2.wow.fadeInUp NHẬN NGAY ƯU ĐÃI
					br
					| VOUCHER TRỊ GIÁ 350K TỪ SKECHERS!
				p Hàng ngàn vouchers trị giá 
					b 350,000 VNĐ 
					| dành cho dòng sản phẩm 
					br
					b ULTRA FLEX 
					| và 
					b ULTRA FLEX 2.0 
					| đang đợi bạn. Điền đầy đủ thông tin bên 
					br 
					| dưới và click 
					b NHẬN ƯU ĐÃI 
					| để nhận ngay ưu đãi đặc biệt:
			.block-form
				.form-group
					input(type="text" placeholder="Họ tên")
				.form-group
					input(type="text" placeholder="Số điện thoại")
				.form-group
					input(type="text" placeholder="Email")
				.form-button
					button Nhận ưu đãi
				.form-countdown
					label Ưu đãi sẽ kết thúc sau:
					.date-group
						time
							span#day 0
							span Ngày
						time
							span#hour 0
							span Giờ
						time
							span#minute 0
							span Phút
						time
							span#second 0
							span Giây
	section.block-product
		.container
			//- h2.main-title.text-center.wow.fadeInUp Sản phẩm khuyến mãi
			h2.main-title.text-center.wow.fadeInUp Sản phẩm mới nhất
			.row
				-for(let i = 1; i < 25; i++)
					.col-6.col-md-4.col-lg-3
						.product-item
							a(href="./assets/product/p_" + i + ".jpg" data-fancybox="product"+i data-width="800px")
								.img
									img(src="./assets/product/p_" + i + ".jpg", alt="")
								.info
									h3 Energy - Pure Serenity
									p 
										del 3.200.00 vnđ
										span 2.900.000 vnđ
			.row
				.col-12
